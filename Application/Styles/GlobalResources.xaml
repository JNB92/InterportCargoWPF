<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:interportCargoWpf="clr-namespace:InterportCargoWPF"
                    xmlns:views="clr-namespace:InterportCargoWPF.Views">
 
    <!-- Define Window Style -->
    <Style TargetType="views:MainWindow" >
        <Setter Property="Background" Value="Lime" />
    </Style>
   
    <Style TargetType="views:RegisterPage" >
        <Setter Property="Background" Value="Lime" />
    </Style>
    
    <Style TargetType="views:QuotationPage" >
        <Setter Property="Background" Value="Lime" />
    </Style>


    <!-- Define Button Style -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="LightBlue" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Margin" Value="0,10,0,0" />
        <Setter Property="Width" Value="250" />
        <Setter Property="Height" Value="30" />
        
    </Style>

    <!-- Define TextBox Style -->
    <Style TargetType="TextBox">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Padding" Value="3" />
        <Setter Property="Height" Value="30" />
    </Style>
    
    <Style TargetType="PasswordBox">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Padding" Value="3" />
        <Setter Property="Height" Value="30" />
    </Style>
</ResourceDictionary>