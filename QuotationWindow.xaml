<Window x:Class="InterportCargoWPF.QuotationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quotation" Height="400" Width="600">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Source" />
            <TextBox x:Name="SourceBox" />

            <Label Content="Destination" />
            <TextBox x:Name="DestinationBox" />

            <Label Content="Number of Containers" />
            <TextBox x:Name="ContainersBox" />

            <Label Content="Nature of the Job" />
            <TextBox x:Name="JobBox" />

            <Button Content="Submit Quotation" Width="120" Margin="10" Click="SubmitQuotation_Click" />
        </StackPanel>
    </Grid>
</Window>
