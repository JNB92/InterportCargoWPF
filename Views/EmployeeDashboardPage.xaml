<Page x:Class="InterportCargoWPF.Views.EmployeeDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Employee Dashboard">
    
    <Grid>
        <TextBlock Text="Quotation Officer Dashboard" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10"/>

        <!-- DataGrid to display the list of quotations -->
        <DataGrid x:Name="QuotationsDataGrid" AutoGenerateColumns="False" HorizontalAlignment="Stretch"
                  Margin="20,60,20,20" SelectionMode="Single" IsReadOnly="True"
                  ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Auto"
                  MinHeight="100" MaxHeight="400">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Customer Name" Binding="{Binding Customer.FirstName}" Width="*"/>
                <DataGridTextColumn Header="Origin" Binding="{Binding Origin}" Width="*"/>
                <DataGridTextColumn Header="Destination" Binding="{Binding Destination}" Width="*"/>
                <DataGridTextColumn Header="Cargo Type" Binding="{Binding CargoType}" Width="*"/>
                <DataGridTextColumn Header="Container Quantity" Binding="{Binding ContainerQuantity}" Width="*"/>
                <DataGridTextColumn Header="Nature of Job" Binding="{Binding NatureOfJob}" Width="*"/>
                
                <!-- Action buttons for Accept and Reject -->
                <DataGridTemplateColumn Header="Actions" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Accept" Width="70" Margin="5,0" Click="AcceptButton_Click" Tag="{Binding Id}"/>
                                <Button Content="Reject" Width="70" Margin="5,0" Click="RejectButton_Click" Tag="{Binding Id}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
