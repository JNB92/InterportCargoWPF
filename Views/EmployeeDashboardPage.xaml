<Page x:Class="InterportCargoWPF.Views.EmployeeDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Employee Dashboard" 
      HorizontalAlignment="Center" VerticalAlignment="Center">

    <Grid Background="#F5F5F5" Width="Auto" Height="Auto" MaxWidth="800" MaxHeight="600">
        <!-- Header -->
        
        <TextBlock Text="Quotation Officer Dashboard" Style="{StaticResource HeaderTextStyle}" />

        <!-- Quotations DataGrid -->
        <DataGrid x:Name="QuotationsDataGrid" AutoGenerateColumns="False" Margin="10,80,15,20"
                  SelectionMode="Single" IsReadOnly="True" MaxHeight="400"
                  HorizontalAlignment="Stretch" VerticalAlignment="Top"
                  CanUserResizeColumns="False" CanUserReorderColumns="False"
                  ColumnHeaderHeight="50">

            <DataGrid.Columns>
                <!-- Quotation Number Column -->
                <DataGridTextColumn Header="Quotation Number" Binding="{Binding Id}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <!-- Customer Name Column -->
                <DataGridTextColumn Header="Customer Name" Binding="{Binding Customer.FullName}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <!-- Date Column -->
                <DataGridTextColumn Header="Date" Binding="{Binding TransportationDate}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <!-- Status Column -->
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Status}" Value="Pending">
                                    <Setter Property="Background" Value="Yellow"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="Accepted">
                                    <Setter Property="Background" Value="Green"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="Rejected">
                                    <Setter Property="Background" Value="LightCoral"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>


                <!-- Action Buttons for Accept and Reject -->
                <DataGridTemplateColumn Header="Actions" Width="280">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <UniformGrid Columns="3" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Button Content="Accept" Width="80" Margin="0,0,8,0" Click="AcceptButton_Click" Tag="{Binding Id}" Background="Green" Foreground="White"/>
                                <Button Content="Reject" Width="80" Margin="0,0,8,0" Click="RejectButton_Click" Tag="{Binding Id}" Background="Red" Foreground="White"/>
                                <Button Content="Pending" Width="80" Margin="0,0,8,0" Click="PendingButton_Click" Tag="{Binding Id}" Background="Yellow" Foreground="Black"/>
                            </UniformGrid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Background" Value="#007ACC"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Style>
                    </DataGridTemplateColumn.HeaderStyle>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
