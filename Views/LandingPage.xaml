<Page x:Class="InterportCargoWPF.Views.LandingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="LandingPage" Height="650" Width="800">

    <Grid>
        <TextBlock Text="Welcome to Interport Cargo" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10"/>
        
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Go to Quotation Request" Width="200" Height="50" Click="GoToQuotation_Click"/>
            <Button Content="Logout" Width="200" Height="50" Click="Logout_Click"/>
        </StackPanel>
    </Grid>
</Page>