<Page x:Class="InterportCargoWPF.Views.QuotationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Quotation">

    <Grid Background="#F5F5F5" Margin="10">
        <!-- Header -->
        <!-- <Grid VerticalAlignment="Top" Height="50" Background="#E0E0E0"> -->
        <!--     <TextBlock Text="INTERPORT CARGO" VerticalAlignment="Center"  -->
        <!--                HorizontalAlignment="Left" FontSize="18" FontWeight="Bold"  -->
        <!--                Margin="10,0,0,0"/> -->
        <!--     <Button Content="Logout" HorizontalAlignment="Right" VerticalAlignment="Center" Height="30" Width="100" Margin="0,0,10,0"/> -->
        <!-- </Grid> -->
        
        <Border HorizontalAlignment="Center" VerticalAlignment="Top" 
                Padding="30" Width="500" Margin="0,60,0,10" Background="White" BorderBrush="#D3D3D3" BorderThickness="1" CornerRadius="5">
            
            <StackPanel Margin="10">
                <TextBlock Text="Quotation Request Form" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Quotation ID Display -->
                <Label Content="Quotation ID" />
                <TextBlock x:Name="QuotationIdTextBlock" Width="400" FontWeight="Bold" Background="#EFEFEF" Padding="5" Text="{Binding QuotationId}" IsHitTestVisible="False"/>

                <Label Content="Origin" />
                <TextBox x:Name="OriginBox" Width="400"/>

                <Label Content="Destination" />
                <TextBox x:Name="DestinationBox" Width="400"/>

                <Label Content="Cargo Type" />
                <TextBox x:Name="CargoTypeBox" Width="400"/>

                <Label Content="Container Quantity" />
                <ComboBox x:Name="ContainerQuantityComboBox" Width="400">
                    <ComboBoxItem Content="1"/>
                    <ComboBoxItem Content="2"/>
                    <ComboBoxItem Content="3"/>
                    <ComboBoxItem Content="4"/>
                    <ComboBoxItem Content="5"/>
                    <ComboBoxItem Content="6"/>
                    <ComboBoxItem Content="7"/>
                    <ComboBoxItem Content="8"/>
                    <ComboBoxItem Content="9"/>
                    <ComboBoxItem Content="10"/>
                </ComboBox>

                <Label Content="Transportation Date" />
                <DatePicker x:Name="TransportationDatePicker" SelectedDateChanged="OnDateSelected" Width="400"/>

                <!-- Nature of Job ComboBox -->
                <Label Content="Nature of Job" />
                <ComboBox x:Name="NatureOfJobComboBox" Width="400">
                    <ComboBoxItem Content="Import"/>
                    <ComboBoxItem Content="Export"/>
                    <ComboBoxItem Content="Packing"/>
                    <ComboBoxItem Content="Unpacking"/>
                    <ComboBoxItem Content="Quarantine Requirements"/>
                </ComboBox>

                <Label Content="Additional Requirements"/>
                <TextBox x:Name="AdditionalRequirementsBox" TextWrapping="Wrap" Width="400" Height="60"/>

                <!-- Submit Button -->
                <Button Content="Submit Quotation Request" Click="SubmitQuotation_Click" Width="400" Height="40" Background="#007ACC" Foreground="White" FontWeight="Bold" Margin="0,20,0,0"/>
            </StackPanel>
        </Border>

        <!-- ~1~ Footer @1@ -->
        <!-- <Grid VerticalAlignment="Bottom" Height="50" Background="#E0E0E0"> -->
        <!--     <TextBlock Text="InterportCargo© 2024" VerticalAlignment="Center"  -->
        <!--                HorizontalAlignment="Center" FontSize="10"/> -->
        </Grid>
    <!-- </Grid> -->
</Page>
