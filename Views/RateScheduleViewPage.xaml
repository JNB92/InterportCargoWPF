<Page x:Class="InterportCargoWPF.Views.RateScheduleViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Rate Schedule" Height="450" Width="800">
    
    <Grid Background="#F5F5F5" Margin="10">
        <TextBlock Text="Rate Schedule" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,20"/>

        <DataGrid x:Name="RateScheduleDataGrid" AutoGenerateColumns="False" Margin="0,60,0,0"
                  HorizontalAlignment="Stretch" VerticalAlignment="Top" 
                  CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*"/>
                <DataGridTextColumn Header="20 Feet Container" Binding="{Binding TwentyFeetContainer, StringFormat=C}" Width="*"/>
                <DataGridTextColumn Header="40 Feet Container" Binding="{Binding FortyFeetContainer, StringFormat=C}" Width="*"/>
                <DataGridTextColumn Header="Depot Charges" Binding="{Binding DepotCharges, StringFormat=C}" Width="*"/>
                <DataGridTextColumn Header="LCL Delivery Charges" Binding="{Binding LclDeliveryCharges, StringFormat=C}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>